{
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "composer/composer": "^1.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9",
        "phpstan/phpstan": "~0.12.0"
    },
    "autoload": {
        "psr-4": {
            "Dependabot\\Composer\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --diff --verbose"
        ],
        "stan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}
